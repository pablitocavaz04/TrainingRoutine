<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/splashFragment">

    <!-- Splash -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.SplashFragment"
        android:label="Splash Screen">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.LoginFragment"
        android:label="Login Screen">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_sesionesFragment"
            app:destination="@id/sesionesFragment" />
    </fragment>

    <!-- Register -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.RegisterFragment"
        android:label="Register Screen">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Sesiones -->
    <fragment
        android:id="@+id/sesionesFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.SesionesFragment"
        android:label="Sesiones Screen">
        <action
            android:id="@+id/action_sesionesFragment_to_entrenamientosFragment"
            app:destination="@id/entrenamientosFragment" />
        <action
            android:id="@+id/action_sesionesFragment_to_jugadoresFragment"
            app:destination="@id/jugadoresFragment" />
        <action
            android:id="@+id/action_sesionesFragment_to_crearSesionFragment"
            app:destination="@id/crearSesionFragment" />
    </fragment>

    <!-- Entrenamientos -->
    <fragment
        android:id="@+id/entrenamientosFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.EntrenamientosFragment"
        android:label="Entrenamientos Screen" />

    <!-- Jugadores -->
    <fragment
        android:id="@+id/jugadoresFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.JugadoresFragment"
        android:label="Jugadores Screen" />

    <!-- Crear Sesión -->
    <fragment
        android:id="@+id/crearSesionFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.CrearSesionFragment"
        android:label="Crear Sesión Screen" />

    <!-- User Profile -->
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.trainingroutine_pablocavaz.data.ui.UserProfileFragment"
        android:label="Perfil">
        <action
            android:id="@+id/action_userProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>
